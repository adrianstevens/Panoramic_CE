<UserControl x:Class="Rescue.Controls.Animal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="300" SizeChanged="UserControl_SizeChanged">

    <Canvas x:Name="myCanvas" Width="Auto" Height="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Canvas.Clip>
            <RectangleGeometry Rect="0,0,300,300"/>
        </Canvas.Clip>
        <Image HorizontalAlignment="Left" Name="myImage" Stretch="None" VerticalAlignment="Top" DataContext="{Binding}" Source="/Assets/Animals/sheep.png" Canvas.Left="0" Canvas.Top="0" IsHitTestVisible="True" RenderTransformOrigin="0,0" />
    </Canvas>

</UserControl>
