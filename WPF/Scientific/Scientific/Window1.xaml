<Window x:Class="CalcPro.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CalcPro"
    Title="Panoramic Scientific Calc" 
    SizeToContent="WidthAndHeight"
    ResizeMode="CanMinimize">
    
    <Grid x:Name="LayoutRoot" Loaded="LayoutRoot_Loaded" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="24"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Menu Name="menuFile" Height="22" Width="960"/>
        <Grid x:Name="gridCalc" Grid.Row="1"/>
        
    </Grid>
</Window>
