<UserControl x:Class="BlackJack.Controls.BetStack"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:my="clr-namespace:BlackJack.Controls"

    d:DesignHeight="165" d:DesignWidth="145" Loaded="UserControl_Loaded">

    <Canvas x:Name="LayoutRoot">

        <my:ChipStack Canvas.Left="10" Canvas.Top="0" x:Name="chipsBlack" />
        <my:ChipStack Canvas.Left="70" Canvas.Top="0" x:Name="chipsGreen" />

        <my:ChipStack Canvas.Left="0" Canvas.Top="35" x:Name="chipsRed" />
        <my:ChipStack Canvas.Left="60" Canvas.Top="35" x:Name="chipsBlue" />
    
    </Canvas>
</UserControl>
