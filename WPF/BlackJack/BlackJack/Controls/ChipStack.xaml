<UserControl x:Class="BlackJack.Controls.ChipStack"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="129" d:DesignWidth="75">
    
    <Grid x:Name="LayoutRoot" Background="Transparent" Width="75" Height="129" IsHitTestVisible="False" HorizontalAlignment="Left" VerticalAlignment="Top">
        <Canvas HorizontalAlignment="Stretch" Name="canvasBackground" VerticalAlignment="Stretch" IsHitTestVisible="False" Loaded="canvasBackground_Loaded">
            <Canvas.Clip>
                <RectangleGeometry Rect="0,0,75,129"/>
            </Canvas.Clip>
            <Image Opacity="0" Name="imgBackground" Stretch="Uniform" IsHitTestVisible="False" Width="1125" Height="129"/>
        </Canvas>
    </Grid>
</UserControl>
