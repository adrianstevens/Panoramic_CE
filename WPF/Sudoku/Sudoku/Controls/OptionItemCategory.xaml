<UserControl x:Class="Sudoku.OptionItemCategory"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}" d:DesignHeight="63" d:DesignWidth="467" Height="80">
    <UserControl.Foreground>
        <SolidColorBrush />
    </UserControl.Foreground>
    <Grid x:Name="LayoutRoot" Margin="0,17,-63,8">
    	<Grid.Background>
    		<SolidColorBrush Color="{StaticResource PhoneAccentColor}" Opacity="0.3"/>
    	</Grid.Background>
        <TextBlock HorizontalAlignment="Left" Margin="5,0,0,0" Name="txtTitle" Text="Title gyp" Width="250" Foreground="White" FontSize="37.333" />
    </Grid>
</UserControl>
